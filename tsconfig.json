{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "jsx": "react",
    "target": "esnext",
    "outDir": "lib/mjs",
    "declaration": true,
    "declarationDir": "lib/types",
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "importHelpers": true
  },
  "lib": ["dom"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "generateVersion.js", "src/declarations.d.ts"],
  "exclude": ["src/stories/**", "node_modules", "lib", "storybook-static", ".storybook"]
}
